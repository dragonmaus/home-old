#!/usr/bin/env calc -sf

if (argv() < 2) {
  fprintf(files(2), "usage: %s x...\n", config("program"));
  abort "not enough arguments";
}

config("display", 1), config("tilde", 0),;

prefix = list("", "K", "M", "G", "T", "P", "E", "Z", "Y");

for (i = 1; i < argv(); ++i) {
  n = eval(argv(i));
  p = 0;

  while (n >= 1024 && (p + 1) < size(prefix)) {
    n /= 1024;
    ++p;
  }

  print n:prefix[p]:"B";
}
